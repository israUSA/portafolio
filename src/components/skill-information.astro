---
const { icon } = Astro.props;
const { name } = Astro.props;

---


<div class="flex items-center gap-4 p-4 rounded-lg shadow-m">
  <!-- Icono -->
  <div class="text-4xl">
    <i class={icon}></i>
  </div>

  <!-- Nombre de la habilidad -->
  <div class="flex-1">
    <h3 class="text-xl font-bold">{name}</h3>
  </div>
</div>