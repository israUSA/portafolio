---
import type { NavItem } from "../types/types";

const navItems: Array<NavItem> = [
  { title: "Inicio", url: "#start" },
  { title: "Skills", url: "#skills" },
  { title: "Proyectos", url: "#projects" },
  { title: "Contacto", url: "#contact" },
];
---

<header id="page-header" class="sticky top-0 z-50 w-full text-gray-950">
  <div class="max-w-8xl mx-auto px-4 sm:px-6">
    <div class="flex h-16 items-center justify-between">
      <div class="flex-1">
        <span class="text-lg font-bold tracking-tight">Israel Portafolio</span>
      </div>

      <nav class="hidden md:flex items-center">
        <ul class="flex items-center gap-8">
          {
            navItems.map(({ title, url }) => (
              <li>
                <a href={url}>{title}</a>
              </li>
            ))
          }
        </ul>
      </nav>

      <div class="flex-1 flex items-center justify-end gap-6">
        <button id="themeToggle" class="button p-2 rounded-lg shrink-0">
          <svg
            width="2rem"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              class="sun"
              fill="yellow"
              fill-rule="evenodd"
              d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z"
            ></path>
            <path
              class="moon"
              fill="White"
              fill-rule="evenodd"
              d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z"
            ></path>
          </svg>
        </button>

        <a
          href=""
          class="button inline-block px-6 py-3 rounded-lg hover:bg-opacity-90 transition shadow-md"
        >
          <span> Curriculum </span>
          <i class="fa-solid fa-download text-2xl"></i>
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  const theme = (() => {
    const localStorageTheme = localStorage?.getItem("theme") ?? "";
    if (["dark", "light"].includes(localStorageTheme)) {
      return localStorageTheme;
    }
  
    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  document.documentElement.setAttribute("data-theme", theme);

  window.localStorage.setItem("theme", theme);

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    element.setAttribute(
      "data-theme",
      element.classList.contains("dark") ? "dark" : "light",
    );

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };

  document
    .getElementById("themeToggle")
    ?.addEventListener("click", handleToggleClick);
</script>

<style>
  :global(.dark) .hover-underline::after,
  :global(.dark) .hover-underline::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #cca848, #cca848);
    bottom: -5px;
    left: 0;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s ease-out;
  }
  #themeToggle {
    border: 0;
  }
  .sun {
    fill: yellow;
  }
  .moon {
    fill: transparent;
  }

  :global(.dark) .sun {
    fill: transparent;
  }
  :global(.dark) .moon {
    fill: black;
  }
</style>
