<style>
  .hover-underline {
    position: relative;
    display: inline-block;
  }
  :global(.dark) .hover-underline::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #cca848, #cca848);
    bottom: -5px;
    left: 0;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s ease-out;
  }

  .hover-underline:hover::after {
    transform: scaleX(1);
  }

  .hover-underline::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #0d0907, #0d0907);
    bottom: -5px;
    left: 0;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s ease-out;
  }

  #themeToggle {
    border: 0;
  }
  .sun {
